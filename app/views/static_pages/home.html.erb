<section class="section-main bg padding-y mt-2">
  <div class="container">
    <div class="row">
      <aside class="col-md-3">
        <nav class="card">
          <ul class="menu-category">
            <li><a href="#">Home</a></li>
            <li class="has-submenu"><a href="#">Products</a>
              <ul class="submenu">
                <%= render partial: "shared/category", locals: {zone: @categories} %>
              </ul>
            </li>
            <li>
              <%= link_to "Hot Trends", home_path(rate: "DESC") %>
            </li>
            <li>
              <%= link_to "Contributes", new_contribute_path %>
            </li>
            <li class="has-submenu"><a href="#">Sort by</a>
              <ul class="submenu">
                <li>
                  <%= link_to t("sort.price.low"), home_path(price: Settings.order.ASC ) %>
                </li>
                <li>
                  <%= link_to t("sort.price.high"), home_path(price: Settings.order.DESC ) %>
                </li>
                <li>
                  <%= link_to t("sort.rate.low"), home_path(rate: Settings.order.ASC ) %>
                </li>
                <li>
                  <%= link_to t("sort.rate.high"), home_path(rate: Settings.order.DESC ) %>
                </li>
                <li>
                  <%= link_to t("sort.name.low"), home_path(name: Settings.order.ASC ) %>
                </li>
                <li>
                  <%= link_to t("sort.name.high"), home_path(name: Settings.order.DESC ) %>
                </li>
              </ul>
          </ul>
        </nav>
      </aside>
      <div class="col-md-9">
        <article class="banner-wrap">
          <%= image_tag("2.jpg", class: "banner-config") %>
        </article>
      </div>
    </div>
  </div>
</section>
<section class="section-name padding-y-sm mt-5">
  <div class="container">
    <header class="section-heading">
      <div class="row">
        <div class="col-md-10">
          <h3 class="section-title">Popular products</h3>
        </div>
        <div class="col-md-2">
          <%= button_to  "Show all", home_path, method: "get", class: "btn btn-outline-primary config-showall" %>
        </div>
    </header>
    <div class="row">
      <%= render partial: "shared/product", collection: @products %>
    </div>
    <div class="row mt-5 justify-content-center">
      <div class="col-md-3">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
     <hr>
    <header class="section-heading">
      <h3 class="section-title">Recently products</h3>
    </header>
    <div class="row">
      <%= render partial: "shared/recent_product", collection: @recent_product %>
    </div>
  </div>
</section>
